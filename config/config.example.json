    "controllers": {
        "descriptor": {
            "group": "pip-services-roles"            
        }
    },    
    
    "clients": [],
    
    "services": [
        {
            "descriptor": {
                "group": "pip-services-roles",            
                "type": "seneca",
                "version": "1.0"
            },
            "endpoint": {
                "type": "tcp",
                "host": "localhost",
                "port": 8813
            }
        },
        {
            "descriptor": {
                "group": "pip-services-roles",            
                "type": "rest",
                "version": "1.0"
            },
            "endpoint": {
                "type": "http",
                "host": "localhost",
                "port": 8013
            }
        }
    ]
    
